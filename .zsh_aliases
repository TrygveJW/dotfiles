# alias for the git dotfile stuff
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# add colors
alias ls='ls --color=auto'
alias grep='grep --color=auto'

# div aliases
alias ll='ls -alF'
alias lg='ls -alF | grep -i'
alias surf='surf -d'
alias hh='history 1 | grep -i'

